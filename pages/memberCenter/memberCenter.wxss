/* pages/memberCenter/memberCenter.wxss */
.member-container{
  width: 100%;
  /* background: #fff;   */
}
.member-top{
  padding: 30rpx 30rpx 60rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #16bb91;
  color: #fff;
  align-items: center;
}
.name-avatar {
  display: flex;
  align-items: center;
}
.member-avatar{
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
  border-radius: 50%;
  border: solid 2rpx #fff;
}
.member-avatar image{
  width: 100%;
  height: 100%;
   border-radius: 50%;
}
.name-avatar .member-name{
  font-size: 32rpx;
  font-weight: 600;
}
.inviteBox{
  border: solid 2rpx #fff;
  padding: 12rpx 20rpx;
  border-radius: 30rpx;
  position: relative;
}
.share{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 999;
  opacity: 0;
}


/* 工具栏 */
.tool-box{
  margin: 30rpx;
  background-color: #fff;
  margin-top: -30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx;
  border-radius: 20rpx;
}
.tool-list{
  text-align: center;
}
.tool-list image{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.complete-info{
  background-color: #fee9bb;
  padding: 20rpx;
  margin: 30rpx 30rpx 60rpx 30rpx;
}
 .title{
  padding-bottom: 20rpx;
  font-size: 28rpx;
  font-weight: 700;
}
.explain-detail{
  display: flex;
  justify-content: space-between;
  line-height: 36rpx;
  padding-bottom: 25rpx;
}
.detail{
  width: 180rpx;
  color: #f44700;
}
.explain{
  margin-right: 20rpx;
  color: #8e6032;
  font-weight: 600;
}
.common-tools-box{
  margin: 30rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}
.common-tools {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.common-tools-list{
  display: flex;
  flex-direction: column;
  
}
.common-tools .common-tools-url{
  display: block;
  /* width: 24%; */
  text-align: center;
  margin: 20rpx 0;
  position: relative;
}
.kefu{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  opacity: 0;
}
.common-tools image{
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 10rpx;
}
.common-tools .common-tools-bottom{
  display: flex;
  justify-content: space-between; 
}
